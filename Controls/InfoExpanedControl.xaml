<UserControl x:Class="Tech_Quick.InfoControlExpaned"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tech_Quick"
             mc:Ignorable="d" 
             d:DesignHeight="400
             " d:DesignWidth="400">
    <Grid>
        <ScrollViewer Margin=" 5" VerticalScrollBarVisibility="Auto">
            <ListView x:Name="InformationListView">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Description" Width="200"/>
                        <GridViewColumn Header="Information" Width="200"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </ScrollViewer>
    </Grid>
</UserControl>
